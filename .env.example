# PM Agent Squad Master - Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================================================
# Amazon Bedrock Configuration
# ============================================================================
VITE_BEDROCK_AGENT_ID=your_agent_id_here
VITE_BEDROCK_AGENT_ALIAS_ID=your_agent_alias_id
VITE_BEDROCK_REGION=us-east-1

# Amazon Bedrock API Endpoint
VITE_BEDROCK_ENDPOINT=https://bedrock-agent-runtime.us-east-1.amazonaws.com

# ============================================================================
# AWS Credentials (Use IAM roles in production instead)
# ============================================================================
# VITE_AWS_ACCESS_KEY_ID=your_access_key
# VITE_AWS_SECRET_ACCESS_KEY=your_secret_key

# ============================================================================
# Application Configuration
# ============================================================================
VITE_APP_TITLE=PM Agent Squad Master
VITE_APP_DESCRIPTION=AI-powered agent assistant
VITE_APP_VERSION=2.0.0

# Environment: development, staging, production
VITE_ENVIRONMENT=development

# ============================================================================
# Deployment Configuration
# ============================================================================
VITE_DEPLOYMENT_URL=http://localhost:5173
VITE_API_BASE_URL=https://api.example.com

# ============================================================================
# Analytics & Monitoring (Optional)
# ============================================================================
# Google Analytics
VITE_GA_TRACKING_ID=

# Sentry Error Tracking
VITE_SENTRY_DSN=

# Custom Analytics Endpoint
VITE_ANALYTICS_ENDPOINT=

# ============================================================================
# Feature Flags
# ============================================================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_MULTI_AGENT=false
VITE_ENABLE_PLUGINS=false

# ============================================================================
# UI Customization
# ============================================================================
VITE_PRIMARY_COLOR=#6366f1
VITE_SECONDARY_COLOR=#8b5cf6
VITE_ACCENT_COLOR=#ec4899

# ============================================================================
# Rate Limiting & Performance
# ============================================================================
VITE_MAX_MESSAGE_LENGTH=5000
VITE_MAX_CONVERSATION_HISTORY=50
VITE_REQUEST_TIMEOUT=30000

# ============================================================================
# Security
# ============================================================================
# Enable CORS (comma-separated origins)
VITE_ALLOWED_ORIGINS=http://localhost:5173,https://yourdomain.com

# Enable authentication
VITE_ENABLE_AUTH=false
VITE_AUTH_PROVIDER=

# ============================================================================
# Plugin Configuration
# ============================================================================
# Comma-separated list of enabled plugins
VITE_ENABLED_PLUGINS=

# Plugin API endpoints
VITE_SLACK_WEBHOOK_URL=
VITE_TEAMS_WEBHOOK_URL=

# ============================================================================
# Development & Testing
# ============================================================================
# Mock Bedrock responses for local development
VITE_MOCK_BEDROCK=false

# Enable verbose logging
VITE_LOG_LEVEL=info

# Test mode
VITE_TEST_MODE=false

# ============================================================================
# Multi-Agent Configuration
# ============================================================================
# Default agent ID (when multi-agent is disabled)
VITE_DEFAULT_AGENT_ID=

# Agent configuration file path
VITE_AGENTS_CONFIG_PATH=./agents.config.json
